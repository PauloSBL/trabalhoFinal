<script>

    function sleep (time) {
        return new Promise((resolve) => setTimeout(resolve, 1000));
    }

    function AddPokeBall(){
        const parentElement = document.querySelector('.loginScreen');
        const newElement = document.createElement('div');
        newElement.innerHTML = '<div class="pokeball"><div class="pokeball__button"></div></div>';
        parentElement.appendChild(newElement);
    }

    document.getElementById('btnLogin').addEventListener('click', async function() {
        document.getElementById('containerLoginScreen').classList.add('esmaecer');
        await sleep()
        document.getElementById('containerLoginScreen').classList.add('esconder');
        await AddPokeBall()
